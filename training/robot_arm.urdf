<?xml version="1.0" ?>
<robot name="robot_arm">
  <!-- Базова платформа -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 0: Base rotation (Z axis) -->
  <joint name="joint_0" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 1: First segment -->
  <link name="link_1">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0005"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
    </collision>
  </link>

  <!-- Joint 1: Shoulder pitch (Y axis) -->
  <joint name="joint_1" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 2: Second segment -->
  <link name="link_2">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.0005"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.15"/>
      </geometry>
      <origin xyz="0 0 0.075"/>
    </collision>
  </link>

  <!-- Joint 2: Elbow pitch (Y axis) -->
  <joint name="joint_2" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 3: Third segment -->
  <link name="link_3">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.12"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.4"/>
      <origin xyz="0 0 0.06"/>
      <inertia ixx="0.0008" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0004"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.12"/>
      </geometry>
      <origin xyz="0 0 0.06"/>
    </collision>
  </link>

  <!-- Joint 3: Wrist pitch (Y axis) -->
  <joint name="joint_3" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 4: Fourth segment -->
  <link name="link_4">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.10"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
      <material name="cyan">
        <color rgba="0 1 1 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.0006" ixy="0" ixz="0" iyy="0.0006" iyz="0" izz="0.0003"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.10"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
  </link>

  <!-- Joint 4: Wrist roll (Z axis) -->
  <joint name="joint_4" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 5: End effector mount -->
  <link name="link_5">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.08"/>
      </geometry>
      <origin xyz="0 0 0.04"/>
      <material name="magenta">
        <color rgba="1 0 1 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0.04"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.0002"/>
    </inertial>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.08"/>
      </geometry>
      <origin xyz="0 0 0.04"/>
    </collision>
  </link>

  <!-- Joint 5: Gripper (last joint) -->
  <joint name="joint_5" type="revolute">
    <parent link="link_5"/>
    <child link="end_effector"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- End effector link -->
  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <collision>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>
  </link>

</robot>
